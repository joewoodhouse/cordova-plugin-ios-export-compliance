<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="cordova-plugin-ios-no-export-compliance" version="0.0.1">
    <name>iOS Export Compliance</name>
    <description>This plugin sets ITSEncryptionExportComplianceCode in *-Info.plist file</description>
    <license>Apache 2.0</license>
    <engines>
        <engine name="cordova-ios" version=">=3.0.0" />
    </engines>
    <keywords>ios,export,compliance</keywords>
    <!-- ios -->
    <platform name="ios">
	<preference name="EXPORT_COMPLIANCE_CODE" />
        <config-file target="*-Info.plist" parent="CFBundleURLTypes">
            <array>
                <dict>
	            <key>ITSAppUsesNonExemptEncryption</key></true>
	    	    <key>ITSEncryptionExportComplianceCode</key><string>$EXPORT_COMPLIANCE_CODE</string>
                </dict>
            </array>
        </config-file>
    </platform>
</plugin>
